<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mpetk.youdecide.odluka"
    android:background="#2dccc4"
    >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="pitanje"
        android:id="@+id/text_pitanje"
        android:layout_alignBaseline="@+id/text_odluka"
        android:layout_alignBottom="@+id/text_odluka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The decision is:"
        android:id="@+id/textView"
        android:textColor="#3F51B5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ANSWER"
        android:id="@+id/text_odluka"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAllCaps="true"

        />

        <com.facebook.share.widget.ShareButton
            android:layout_marginTop="30dp"
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/share" />

    </LinearLayout>

</RelativeLayout>